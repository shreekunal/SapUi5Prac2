<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="confirmationDialog"
        title="Confirmation"
        contentWidth="400px"
        resizable="true"
        draggable="true">
        <content>
            <VBox class="sapUiMediumMargin">
                <Text
                    id="dialogText"
                    text="{dialog>/text}"
                    class="sapUiMediumMarginBottom" />
                <VBox
                    visible="{dialog>/formVisible}"
                    class="sapUiMediumMarginTop">
                    <Label text="Additional Information:" class="sapUiTinyMarginBottom" />
                    <Input
                        id="additionalInfo"
                        value="{dialog>/additionalInfo}"
                        placeholder="Enter additional information..." />
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="confirmButton"
                text="Continue"
                type="Emphasized"
                icon="sap-icon://accept" />
        </beginButton>
        <endButton>
            <Button
                id="cancelButton"
                text="Cancel"
                icon="sap-icon://cancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>